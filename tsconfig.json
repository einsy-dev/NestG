{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6", "dom"],
    "module": "AMD",
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "bin",
    "outFile": "bin/index.js",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
